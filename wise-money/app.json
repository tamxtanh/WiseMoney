{
  "expo": {
    "scheme": "your-app-scheme",
    "name": "wise-money",
    "slug": "wise-money",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/wisemoney.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#F3F2F7"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to take photos.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-wisemoney.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-font",
        {
          "fonts": ["./assets/fonts/Inter-Bold.otf", 
          "./assets/fonts/Inter-Light.otf",
          "./assets/fonts/Inter-Medium.otf",
          "./assets/fonts/Inter-Regular.otf",
          "./assets/fonts/Inter-SemiBold.otf"]
        }
      ],
      "./plugins/custom-android-styles.js"
    ]
  }
}
